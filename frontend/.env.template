# KhetSetu Frontend Environment Configuration Template
# Copy this file to .env and fill in your actual values

# API Configuration
VITE_API_URL=https://khetsetu.onrender.com/api

# App Configuration
VITE_APP_NAME=KhetSetu
VITE_APP_VERSION=1.0.0
VITE_APP_DESCRIPTION=Smart Agricultural Platform

# Environment
VITE_NODE_ENV=production

# Feature Flags
VITE_ENABLE_ANALYTICS=true
VITE_ENABLE_ERROR_REPORTING=true
VITE_ENABLE_DEBUG_MODE=false

# External Services - Replace with your actual API keys
VITE_GEMINI_API_KEY=your_gemini_api_key_here
VITE_WEATHER_API_KEY=your_weatherapi_com_key_here

# Map Configuration (optional)
VITE_GOOGLE_MAPS_API_KEY=your_google_maps_api_key

# Backend Configuration
VITE_BACKEND_URL=https://khetsetu.onrender.com
VITE_HEALTH_CHECK_URL=https://khetsetu.onrender.com/health
VITE_API_DOCS_URL=https://khetsetu.onrender.com/api/docs

# Development Settings
VITE_DEV_TOOLS=false
VITE_LOG_LEVEL=info

# Timeouts (in milliseconds)
VITE_API_TIMEOUT=30000
VITE_REQUEST_RETRY_COUNT=3

# Instructions:
# 1. Copy this file to .env: cp .env.template .env
# 2. Get your Gemini API key from: https://ai.google.dev/
# 3. Get your Weather API key from: https://www.weatherapi.com/
# 4. Replace the placeholder values with your actual API keys
# 5. For local development, change VITE_API_URL to http://localhost:5000/api

# KhetSetu Backend Production Environment Configuration
# Copy this file to .env and fill in your production values

# Environment
NODE_ENV=production
PORT=5000

# MongoDB Atlas Configuration (Production Database)
MONGODB_URI=mongodb+srv://khetsetu-admin:YOUR_PASSWORD@khetsetu.bwxigt3.mongodb.net/khetsetu-prod?retryWrites=true&w=majority
MONGODB_URI_PROD=mongodb+srv://khetsetu-admin:YOUR_PASSWORD@khetsetu.bwxigt3.mongodb.net/khetsetu-prod?retryWrites=true&w=majority

# JWT Authentication Secrets (Generate secure 32+ character keys)
JWT_SECRET=YOUR_SUPER_SECURE_PRODUCTION_JWT_SECRET_32_CHARS_MINIMUM
JWT_REFRESH_SECRET=YOUR_SUPER_SECURE_REFRESH_SECRET_32_CHARS_MINIMUM
JWT_EXPIRE=24h
JWT_REFRESH_EXPIRE=7d

# CORS Configuration (Replace with your actual frontend domain)
CORS_ORIGIN=https://khetsetu.vercel.app

# Google Gemini AI Configuration
GEMINI_API_KEY=YOUR_GEMINI_API_KEY_HERE

# Weather API Configuration (WeatherAPI.com)
WEATHER_API_KEY=YOUR_WEATHER_API_KEY_FROM_WEATHERAPI_COM

# Cloudinary Configuration (for image uploads)
CLOUDINARY_CLOUD_NAME=YOUR_CLOUDINARY_CLOUD_NAME
CLOUDINARY_API_KEY=YOUR_CLOUDINARY_API_KEY
CLOUDINARY_API_SECRET=YOUR_CLOUDINARY_API_SECRET

# Email Configuration (for password reset and notifications)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your_production_email@gmail.com
EMAIL_PASS=your_email_app_password
EMAIL_FROM=noreply@khetsetu.com

# Rate Limiting (Production settings - more restrictive)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=50

# Logging Configuration
LOG_LEVEL=warn
LOG_FILE=production.log

# Security Configuration
BCRYPT_SALT_ROUNDS=12
SESSION_SECRET=YOUR_SESSION_SECRET_32_CHARS_MINIMUM

# File Upload Configuration
MAX_FILE_SIZE=5242880
UPLOAD_PATH=uploads/

# Database Connection Pool Settings
DB_MAX_POOL_SIZE=10
DB_SERVER_SELECTION_TIMEOUT_MS=5000
DB_SOCKET_TIMEOUT_MS=45000

# External API Configuration
WEATHER_UPDATE_INTERVAL=3600000
MARKET_DATA_UPDATE_INTERVAL=1800000

# Cache Configuration
REDIS_URL=redis://localhost:6379
CACHE_TTL=3600

# Monitoring and Analytics
SENTRY_DSN=YOUR_SENTRY_DSN_FOR_ERROR_TRACKING
GOOGLE_ANALYTICS_ID=YOUR_GA_TRACKING_ID

# Feature Flags
ENABLE_AI_FEATURES=true
ENABLE_WEATHER_ALERTS=true
ENABLE_MARKET_INTEGRATION=true
ENABLE_EMAIL_NOTIFICATIONS=true

# Performance Settings
COMPRESSION_LEVEL=6
RESPONSE_TIMEOUT=30000

# Development/Debug Settings (Disable in production)
DEBUG_MODE=false
ENABLE_CORS_ALL=false
VERBOSE_LOGGING=false

# API Keys Instructions:
# 1. Gemini AI: Get from https://makersuite.google.com/app/apikey
# 2. Weather API: Get from https://www.weatherapi.com/
# 3. Cloudinary: Get from https://cloudinary.com/console
# 4. Generate JWT secrets: Use openssl rand -base64 32
